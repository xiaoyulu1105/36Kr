<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    >

    <ImageView
        android:id="@+id/item_recommend_recommend_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="@dimen/mine_button_paddingbotton"
        />

    <!--右边的文字布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/item_recommend_recommend_titletv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="标题"
            android:textColor="@color/colorRecommendTabIsSelected"
            android:textSize="@dimen/activity_item_textsize"/>
        <TextView
            android:id="@+id/item_recommend_recommend_tagtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属标签"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>